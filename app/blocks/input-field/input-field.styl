.input-field
	&__label
		font-family $arial
		font-size 16px
		font-weight normal
		font-style normal
		line-height 21px
		color $bali-hai


	&__input
		font-family $arial
		font-size 16px
		font-weight normal
		font-style normal
		line-height 21px
		color $loblolly

		background-color $white


		&:-ms-input-placeholder {
			color: $loblolly;
		}


		&::placeholder {
			color: $loblolly;

			opacity: 1;
		}
