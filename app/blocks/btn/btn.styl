/*! Button Start */

.btn
	padding-top 11px
	padding-right 0
	padding-left 0
	padding-bottom 11px
	display inline-block

	font-family $open-sans
	font-size 14px
	font-weight 700
	font-style normal
	line-height 18px
	text-align center
	vertical-align top

	border none
	border-radius 20px

	cursor pointer

	&--blue
		color $white

		background-color $science-blue
		background-image linear-gradient(to top, rgba(37, 36, 35, .03), transparent 100%)

/*! Button End */
